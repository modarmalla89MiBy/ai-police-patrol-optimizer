import pandas as pd
import matplotlib.pyplot as plt
import seaborn as sns

# Load zone data
zone_df = pd.read_csv("zone_data.csv")

# Example patrol log - replace with your own results or Airtable data
patrol_log = pd.DataFrame({
    "Hour": list(range(24)),
    "Zone": ["A", "D", "B", "B", "A", "A", "C", "C", "D", "D", "A", "A",
             "B", "B", "C", "C", "D", "D", "A", "A", "B", "B", "C", "C"],
    "Decision": ["Move to D", "Arrive at D", "Move to B", "Arrive at B", "Move to A", "Arrive at A",
                 "Move to C", "Arrive at C", "Move to D", "Arrive at D", "Move to A", "Arrive at A",
                 "Move to B", "Arrive at B", "Move to C", "Arrive at C", "Move to D", "Arrive at D",
                 "Move to A", "Arrive at A", "Move to B", "Arrive at B", "Move to C", "Arrive at C"]
})

# Merge risk values
merged = patrol_log.merge(zone_df, how="left", left_on="Zone", right_on="Zone ID")

# Plot risk level over time
plt.figure(figsize=(12, 6))
sns.lineplot(data=merged, x="Hour", y="Base Risk", marker="o", hue="Zone")
plt.title("Patrol Risk Level Over Time")
plt.xlabel("Hour")
plt.ylabel("Base Risk")
plt.grid(True)
plt.tight_layout()
plt.show()
